<%- include("./layouts/header") %>
<div class="container">
  <h1>Employee Details</h1>
  <form action="/update-form/<%= empData._id %>" method="post">
    <div class="form-group">
      <label for="email">Email address</label>
      <input id="email" type="email" class="form-control" placeholder="Enter email" name="email" value="<%= empData.email %>" required>
      <input type="hidden" name="_id" value="<%= empData._id %>">
    </div>

    <div class="form-group">
      <label for="firstName">First Name</label>
      <input id="firstName" type="text" class="form-control" placeholder="Enter first name" name="firstName" value="<%= empData.firstName %>" required>
    </div>

    <div class="form-group">
      <label for="lastName">Last Name</label>
      <input id="lastName" type="text" class="form-control" placeholder="Enter last name" name="lastName" value="<%= empData.lastName %>" required>
    </div>

    <div class="form-group">
      <label for="gender">Gender</label>
      <select id="gender" class="form-control" name="gender" required>
      <option value="">Select gender</option>
      <option value="Male" <%= empData.gender && empData.gender.toLowerCase() === 'male' ? 'selected' : '' %>>Male</option>
      <option value="Female" <%= empData.gender && empData.gender.toLowerCase() === 'female' ? 'selected' : '' %>>Female</option>
      <option value="Other" <%= empData.gender && empData.gender.toLowerCase() === 'other' ? 'selected' : '' %>>Other</option>
      </select>
    </div>

    <div class="form-group">
      <label for="basicSalary">Basic Salary</label>
      <input id="basicSalary" type="number" class="form-control" placeholder="Enter basic salary" name="basicSalary" value="<%= empData.basicSalary || '' %>" min="0" required>
    </div>

    <div class="form-group">
      <input type="submit" class="btn btn-primary" value="Update">
    </div>
  </form>
  <div class="text-center">
        <a href="/list" class="btn btn-primary">Employee List</a>    
  </div>
</div>

<%- include("./layouts/footer") %>
